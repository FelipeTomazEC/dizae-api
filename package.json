{
  "name": "dizae-api",
  "version": "1.0.0",
  "description": "Backend for the Dizae APP",
  "main": "dist/index.js",
  "repository": "https://www.github.com/felipetomazec/dizae-api",
  "author": "FelipeTomazEC",
  "license": "MIT",
  "private": true,
  "scripts": {
    "lint": "tsc && eslint \"src/**\" \"test/**\" --fix && prettier -w src test",
    "build": "babel ./src --out-dir dist --extensions \".ts\"",
    "test:unit": "jest unit",
    "test": "jest",
    "start": "node dist/index.js",
    "dev": "nodemon --watch 'src/' --exec 'ts-node -r tsconfig-paths/register -r ./src/infra/main/setup-environment.ts src/index.ts' -e ts",
    "migration:create": "yarn knex migrate:make --knexfile ./knexfile.js -x ts",
    "migration:run": "yarn knex migrate:latest --knexfile ./knexfile.js"
  },
  "lint-staged": {
    "*.(ts | js)": [
      "eslint --fix",
      "prettier -w"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc && lint-staged",
      "pre-push": "yarn test"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.13.10",
    "@babel/core": "^7.13.13",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-transform-runtime": "^7.13.15",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-typescript": "^7.13.0",
    "@types/bcrypt": "^3.0.1",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/faker": "^5.5.3",
    "@types/jest": "^26.0.22",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/knex": "^0.16.1",
    "@types/lodash": "^4.14.168",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^7.23.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.22.1",
    "faker": "^5.5.1",
    "husky": "4",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "2.2.1",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "tsconfig-paths-jest": "^0.0.1",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "@babel/runtime": "^7.14.0",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.95.6",
    "lodash": "^4.17.21",
    "sqlite3": "^5.0.2",
    "swagger-ui-express": "^4.1.6",
    "uuid": "^8.3.2"
  }
}
